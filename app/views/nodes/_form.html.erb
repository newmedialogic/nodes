<% form_for @node, :url => nodes_path do |f| %>
  <%= f.error_messages %>
  <ul>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>
    <li>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </li>
    <li>
      <%= f.label :path %>
      <%= f.text_field :path %>
    </li>
    <li class="buttons">
      <%= hidden_field_tag :node_type, 'Page' %>
      <%= f.submit "Submit" %>
    </li>
  </ul>
<% end %>
