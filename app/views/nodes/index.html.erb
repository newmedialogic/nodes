<h1>Current Content</h1>
<%= link_to 'New Page', new_page_path %>
<hr/>
<% if @nodes.size > 0 %>
<table>
  <thead>
    <th>Title</th>
    <th>URL</th>
    <th>Edit</th>
  </thead>
  <% @nodes.each do |node| %>
  <tbody>
    <tr>
      <td><%= node.node_title %></td>
      <td><%= link_to(node.node_abstract.path, node.node_abstract.path) %></td>
      <td><%= link_to('Edit', node_edit_path(@node)) %></td>
    </tr>
  </tbody>
<% end %>
</table>
<% end %>
